<% layout('layouts/boilerplate')%>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        <% for(let ss of studySessions) { %>
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= ss.title %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">by <%= ss.author.username %>
                        </h6>
                        <p class="card-text mb-1">
                            <%= ss.duration %> minutes | <%= ss.category %>
                        </p>
                        <p class="card-text text-muted mb-2">
                            <%= ss.createdAt.toLocaleDateString('en-US'); %> 
                        </p>
                        <a href="/study-sessions/<%= ss._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>

            </div>
            <% } %>
    </div>